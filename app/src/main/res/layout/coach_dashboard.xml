<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="@dimen/height_20"
        android:layout_marginRight="@dimen/height_20"
        android:layout_marginLeft="@dimen/height_20"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.app.discovergolf.Util.EEditText
            android:id="@+id/txtSearch"
            android:singleLine="true"
            android:textStyle="bold"
            android:paddingRight="@dimen/height_10"
            android:drawableRight="@drawable/ic_search_coach"
            android:layout_toLeftOf="@id/imgFilter"
            android:hint="Search..."
            android:layout_marginRight="@dimen/height_10"
            android:paddingLeft="@dimen/height_20"
            android:background="@drawable/round_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40" />
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/imgFilter"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_filter"
            android:layout_width="22dp"
            android:layout_height="24dp" />
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/height_10"
        android:background="#1A707070"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <com.app.discovergolf.Component.TTextview
        android:textStyle="bold"
        android:text="Favorites"
        android:paddingLeft="@dimen/twenty_margin"
        android:textColor="#80000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/RvFavStudents"
        android:background="@color/white"
        android:paddingLeft="@dimen/height_10"
        android:paddingRight="@dimen/height_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_90"></android.support.v7.widget.RecyclerView>
    <View
        android:layout_marginTop="@dimen/height_5"
        android:background="#1A707070"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/RvStudents"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</LinearLayout>