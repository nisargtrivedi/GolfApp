<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40">

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/ten_margin"
            android:layout_marginRight="@dimen/ten_margin"
            android:singleLine="true"
            android:text="Sunrise golf team"
            android:textColor="#080807"
            android:textSize="@dimen/font_size_fourteen" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/ten_margin"
            android:layout_marginRight="@dimen/ten_margin"
            android:singleLine="true"
            android:text="50"
            android:textColor="#080807"
            android:textSize="@dimen/font_size_fourteen" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#ACACAC"></View>
</LinearLayout>