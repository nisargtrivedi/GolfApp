<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/RlOne"
        android:layout_marginTop="@dimen/ten_margin"
        android:layout_marginRight="@dimen/ten_margin"
        android:layout_marginLeft="@dimen/ten_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_80">
        <ImageView
            android:id="@+id/user1"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user_icon"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50" />
        <LinearLayout
            android:paddingLeft="@dimen/twenty_margin"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/time"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/tvTitle"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#080807"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/tvMsg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#99080807"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/time"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#080807"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

<View
    android:background="#A1A1A1"
    android:layout_width="match_parent"
    android:layout_height="1dp"></View>
</LinearLayout>