<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/menu"
    android:gravity="center"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_100">

    <com.app.discovergolf.Util.TTextView
        android:id="@+id/Score"
        android:textSize="10sp"
        android:layout_toRightOf="@id/imgMenu"
        android:translationZ="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="@dimen/height_30"
        android:layout_height="@dimen/height_30"
        android:layout_toEndOf="@+id/imgMenu"
        android:background="@drawable/circle_text"
        android:gravity="center"
        android:text="20"
        android:textColor="@color/white" />
    <ImageView
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/five_margin"
        android:id="@+id/imgMenu"
        android:src="@drawable/ic_menu_sample"
        android:layout_width="@dimen/height_50"
        android:layout_height="@dimen/height_50" />

    <com.app.discovergolf.Util.TTextView
        android:id="@+id/MenuName"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/imgMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Level"
        android:textColor="#202020" />
</RelativeLayout>