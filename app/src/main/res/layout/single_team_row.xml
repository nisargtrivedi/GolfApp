<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_50"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtTeamName"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/ten_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/ten_margin"
        android:layout_toLeftOf="@id/imgEditTeam" />

    <ImageView
        android:id="@+id/imgEditTeam"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/imgDeleteTeam"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/ten_margin"
        android:src="@drawable/ic_edit" />
    <ImageView
        android:visibility="visible"
        android:id="@+id/imgDeleteTeam"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/ten_margin"
        android:src="@drawable/ic_close" />

    <View
        android:layout_alignParentBottom="true"
        android:background="#80A1A1A1"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</RelativeLayout>